<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/postalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Postal Code: S "
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/postalcodeET"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/postalcodeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/new_project_postalcode_hint"
        android:layout_marginRight="10dp"
        android:maxLength="6"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/postalcode" />

    <TextView
        android:id="@+id/error_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postalcodeET"
        android:layout_toEndOf="@+id/postalcode"
        android:layout_marginTop="28dp" />

</RelativeLayout>