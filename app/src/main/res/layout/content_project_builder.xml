<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_project_builder"
        tools:context="com.example.congyitan.tncassistant.ProjectBuilder"
        android:orientation="horizontal">

    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image1"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image5"
                android:layout_row="0"
                android:layout_column="2"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image2"
                android:layout_row="1"
                android:layout_column="0"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image3"
                android:layout_row="0"
                android:layout_column="1"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image4"
                android:layout_row="1"
                android:layout_column="1"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_image6"
                android:layout_row="1"
                android:layout_column="2"
                android:maxHeight="150dp"
                android:minHeight="150dp"
                android:maxWidth="260dp"
                android:minWidth="260dp"
                android:layout_margin="5dp" />

        </GridLayout>
    </HorizontalScrollView>

</LinearLayout>
